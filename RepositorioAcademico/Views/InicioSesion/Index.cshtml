
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

<div class="col-12 col-sm-12 col-md-12 col-lg-9 col-xl-9 col-xxl-9">
    <div class="row">
        <div class="col-sm-12 mt-4">
            <h5>Iniciar Sesión</h5>
        </div>
        <div class="col-sm-7">
            <label>Correo:</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Ingrese su correo">
                <span class="input-group-text" id="basic-addon2"><i class="fas fa-envelope"></i></span>
            </div>
            <label>Contraseña:</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Ingrese su contraseña">
                <span class="input-group-text" id="basic-addon2"><i class="fas fa-key"></i></span>
            </div>
            <div class="d-grid gap-2">
                <a class="btn btn-primary" href="@Url.Action("Index","Home")">Acceder</a>
            </div>
        </div>
    </div>
</div>

