
@{
    ViewBag.Title = "Proyectos";
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

<div class="col-12 col-sm-12 col-md-12 col-lg-9 col-xl-9 col-xxl-9">
    <div class="row">
        <div class="col-sm-12 mt-4">
            <h5>Proyectos realizados por @ViewBag.Estudiante</h5>
        </div>
        <div class="col-sm-12 mt-2" style="min-height:380px;">
            <div id="cargando" class="text-center mt-5">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="list-group list-group-flush" id="listaAutores">
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        ListarPorAutor();
    });

    function ListarPorAutor() {
        $("#listaAutores").html("");
        $("#cargando").show();
        var idEstudiante = @ViewBag.idEstudiante;
        $.getJSON('@Url.Action("ListarPorAutor", "PorAutores")', { idEstudiante: idEstudiante }, function (codHTML) {
            $("#cargando").hide();
            $("#listaAutores").html(codHTML);
        });
    }
</script>